<?xml version="1.0" encoding="utf-8"?>
<com.discut.manga.components.ClipChildFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cover_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true"
    android:background="#196A71">

    <TextView
        android:id="@+id/cover_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rotation="-10"
        android:paddingStart="5dp"
        android:textStyle="normal"
        android:textSize="600sp"
        android:textColor="#66ffffff"
        android:text="A" />

    <TextView
        android:id="@+id/cover_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingEnd="10dp"
        android:rotation="30"
        android:textSize="500sp"
        android:textStyle="bold"
        android:textColor="#44ffffff"
        android:text="B" />
</com.discut.manga.components.ClipChildFrameLayout>